<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Hacker News</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="stylesheets/application.css">
        <script src="https://kit.fontawesome.com/733e866dde.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="javascript/news.js"></script>
    </head>
    <body>
        <main>
            <table id="content" cellspacing="0" cellpadding="0">
                <tbody>
                    <!--Menu-->
                    <tr>
                        <td>
                            <table id="nav" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td id="logo">Y</td>
                                    <td id="menu">
                                        <b>Reply</b>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <!--Space-->
                    <tr id="space-10px"></tr>
                    <!--Item info-->
                    <tr>
                        <td>
                            <table>
                                <!--Title-->
                                <tr id="id" class="newInfo">
                                    <td class="voteButton">
                                        <form method="post" action="/users/upvoteComment/<%= comment.id %>?goto=<%=view%>?id=<%=comment.id%>">
                                            <button type="submit" class="buttonNoStyle"><i class="fas fa-heart"></i></button>
                                        </form>
                                    </td>
                                    <td class="newActions">
                                        <a href="/user?id=<%=comment.googleId%>"><%= comment.username %></a>
                                        <%= comment.createdAt %>
                                        |
                                        <% if(locals.comment.parent) { %>
                                            <a href="/reply?id=<%= comment.parent %>">parent</a>
                                        <% } else { %>
                                            <a href="/submission?id=<%= comment.submission %>">parent</a>
                                        <% } %>
                                        |
                                        <a href="/submission?id=<%= comment.submission %>#<%= comment.id %>">context</a>
                                        | on:
                                        <a href="/submission?id=<%= comment.submission %>"><%= comment.submissionTitle %></a>
                                    </td>
                                </tr>
                                
                                <tr>
                                    <td></td>
                                    <td>
                                        <p>
                                            <%= comment.text %>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <form method="post" action="/comments/<%= comment.id %>/replies">
                                            <textarea name="text" rows="6" cols="100" value=""></textarea>
                                            <br><br>
                                            <input type="submit" value="reply" class="button">
                                        </form>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <!--Space-->
                    <tr id="space-10px"></tr>
                </tbody>
            </table>
        </main>
    </body>
</html>